# .env.example
# IPFS Storage with Pinata
PINATA_API_KEY=your_pinata_api_key_here
PINATA_API_SECRET=your_pinata_api_secret_here
PINATA_GATEWAY_URL=https://gateway.pinata.cloud

# Payment Layer
X402PAY_ENDPOINT=https://x402pay.example.com
CDP_WALLET_ADDRESS=0x1234567890abcdef1234567890abcdef12345678
CDP_WALLET_PRIVATE_KEY=your_private_key_here

# ZK Circuits
ZK_SETUP_PATH=/app/zk-setup
ZK_PROVING_KEY_PATH=/app/proving-keys
ZK_VERIFICATION_KEY_PATH=/app/verification-keys

# Akash Network
AKASH_NODE_URL=https://rpc.akashnet.net:443
AKASH_ACCOUNT_ADDRESS=akash1...
AKASH_ACCOUNT_PRIVATE_KEY=your_akash_private_key

# API Configuration
REGISTRY_API_URL=http://localhost:3000
AGENT_RUNTIME_URL=http://localhost:3001
FRONTEND_URL=http://localhost:3002

# Security
JWT_SECRET=your_jwt_secret_here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
LOG_LEVEL=info
METRICS_ENABLED=true
SENTRY_DSN=your_sentry_dsn_here

# apps/registry-api/.env.local
PINATA_API_KEY=${PINATA_API_KEY}
PINATA_API_SECRET=${PINATA_API_SECRET}
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_IPFS_GATEWAY=https://gateway.pinata.cloud

# apps/agent-runtime/.env
PORT=3001
PINATA_API_KEY=${PINATA_API_KEY}
PINATA_API_SECRET=${PINATA_API_SECRET}
X402PAY_ENDPOINT=${X402PAY_ENDPOINT}
CDP_WALLET_ADDRESS=${CDP_WALLET_ADDRESS}
CDP_WALLET_PRIVATE_KEY=${CDP_WALLET_PRIVATE_KEY}
ZK_SETUP_PATH=${ZK_SETUP_PATH}
ZK_PROVING_KEY_PATH=${ZK_PROVING_KEY_PATH}
ZK_VERIFICATION_KEY_PATH=${ZK_VERIFICATION_KEY_PATH}
RATE_LIMIT_WINDOW_MS=${RATE_LIMIT_WINDOW_MS}
RATE_LIMIT_MAX_REQUESTS=${RATE_LIMIT_MAX_REQUESTS}